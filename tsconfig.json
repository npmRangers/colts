{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitHelpers": true,
    "outDir": "dist",
    "rootDirs": ["src", "test"],
    "pretty": true,
    "declaration": true,
    "importHelpers": false
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "dist",
    "node_modules"
  ]
}